  <body>
    <h1>Un douemtno muy documentado</h1>

    <form action="/users" method="post">
      <input type="text" name="name" />
      <input type="submit" value="send" />
    </form>

    <% if (users.length > 0) { %>
    <ul>
      <% users.forEach(user => {%>
      <li><%= user.name %></li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>no hay cosas</p>
    <% } %>
  </body>
</html>
