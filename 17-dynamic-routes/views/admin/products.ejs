<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css" />
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <h1>Admin</h1>
      <p>List of pros</p>
      <% if (prods.length > 0) { %>
      <div class="grid">
        <% for (let product of prods) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= product.title %></h1>
          </header>
          <div class="card__image">
            <img
              src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png"
              alt="A Book"
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= product.price %></h2>
            <p class="product__description"><%= product.description %></p>
          </div>
          <div class="card__actions">
            <a
              href="/admin/edit-product/<%= product.id %>?isEditMode=true"
              class="btn"
              >&nbsp;Edit&nbsp;</a
            >
            <form
              action="<%= navigationRoutes.adminDeleteProduct.postRoute %>"
              method="post"
            >
              <button class="btn" type="submit">Delete</button>
              <input
                type="text"
                name="productId"
                id="productId"
                hidden
                value="<%= product.id %>"
              />
            </form>
          </div>
        </article>
        <% } %>
      </div>
      <% } else { %>
      <h1>No prodcuts</h1>
      <% } %>
    </main>

    <%- include('../includes/js-files.ejs') %>
  </body>
</html>
