<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <form
        class="product-form"
        action="<% if (isEditMode) { %><%= navigationRoutes.adminEditProduct.postRoute %><% } else { %><%= navigationRoutes.adminAddtProduct.postPath %><% } %>"
        method="POST"
      >
        <div class="form-control">
          <label for="title">Title</label>
          <input
            name="title"
            type="text"
            id="title"
            value="<% if (isEditMode) { %><%= product.title %><% } %>"
          />
        </div>
        <div class="form-control">
          <label for="imageUrl">imgUrl</label>
          <input
            name="imageUrl"
            type="text"
            id="imageUrl"
            value="<% if (isEditMode) { %><%= product.imageUrl %><% } %>"
          />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input
            name="price"
            type="number"
            id="price"
            step="0.01"
            value="<% if (isEditMode) { %><%= product.price %><% } %>"
          />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="5">
<% if (isEditMode) { %><%= product.description %><% } %></textarea
          >
        </div>

        <% if (isEditMode) { %>
        <input
          name="id"
          type="text"
          id="id"
          value="<% if (isEditMode) { %><%= product.id %><% } %>"
          hidden
        />
        <% } %>

        <button class="btn" type="submit">
          <% if (isEditMode) { %> Save Changes <% } else { %> Add Prodcut <% }
          %>
        </button>
      </form>
    </main>

    <%- include('../includes/js-files.ejs') %>
  </body>
</html>
